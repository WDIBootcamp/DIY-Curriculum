<div class="page-title">
  <%= current_user.name %>'s Courses 
</div>

<div class="row">
  <div class="small-10 medium-8 large-6 small-centered columns">

    <dl id="course-tabs" class="tabs" data-tab>
        <dd class="active"><a href="#created">
          Created
        </a></dd>
        <dd><a href="#enrolled">
          Enrolled
        </a></dd>
      <div class="add-course">
        <a href="#" data-reveal-id="new-course">New</a>
        <%= render "new"%>
      </div>
    </dl>

  </div>
</div>

<div class="tabs-content">
  <div class="content active" id="created">
    <% @created_courses.each do |course| %>
      <div class="row">
        <div class="small-10 medium-8 large-6 small-centered columns">
          <a href="/courses/<%= course.id%>">
            <h3><%= course.title %></h3>
            <p><%= course.description %></p>
          </a>
        </div>
      </div>
    <% end %>
  </div>
  <div class="content" id="enrolled">
  <% @enrolled_courses.each do |course| %>
    <div class="row">
      <div class="small-10 medium-8 large-6 small-centered columns">
        <a href="/courses/<%= course.id%>">
          <h3><%= course.title %></h3>
          <p><%= course.description %></p>
        </a>
      </div>
    </div>
  <% end %>
</div>
</div>
 

